                $("#docList div[docId=" + docObject["id"] + "]").siblings().removeClass("selectDoc");
            }
            $("#docList div img,#docList div span").live("click",function () {
                WIS.ChoseDoc({
                    docId: $(this).parent().attr("docId"),
