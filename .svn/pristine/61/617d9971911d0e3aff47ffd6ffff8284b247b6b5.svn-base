                            <input type="" name="industry" class="industry" value="{$list.enterprise_name|default='/(ㄒoㄒ)/~~'}">
                        </li>
                        <li>
                            <span>手机号</span>
                            <span class="x_modify">
                                {$list.phone|default="/(ㄒoㄒ)/~~"}
                                <a  class="go_bound go_phone_up">修改</a>
                            </span>
                        </li>
                        <li>
                            <span>邮箱</span>
                            <span class="x_modify">
                                 {$list.email|default="0"}
                                 <a  class="go_bound go_email_up">修改</a>
                            </span>
