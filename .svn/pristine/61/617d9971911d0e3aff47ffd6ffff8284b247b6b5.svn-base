                        <span class="auth ing">审核中</span>
                        {/eq}
                    </li>
                </ul>
            </li>
            <li class="menu-item bill" data-val="1">
                <a class="mi-text">
                    <i class="iconfont">&#xe729;</i>
                    我的套餐
                </a>
            </li>
            <li class="menu-item balance">
                <a class="mi-text">
                    <i class="iconfont">&#xe610;</i>
                    余额充值
                </a>
            </li>
            <li class="menu-item recharge" data-val="3">
                <a class="mi-text">
                    <i class="iconfont">&#xe656;</i>
                    充值订单
                </a>
