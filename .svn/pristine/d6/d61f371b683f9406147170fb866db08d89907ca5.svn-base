html, body { background-color: #fff; }

.banners_slide { margin: 0 auto; width: 2000px; height: 610px; background-color: #ccc; }

.swiper-container { width: 100%; height: 100%; margin-left: auto; margin-right: auto; }

.swiper-slide { text-align: center; font-size: 18px; background: #fff; /* Center slide text vertically */ display: -webkit-box; display: -ms-flexbox; display: -webkit-flex; display: flex; -webkit-box-pack: center; -ms-flex-pack: center; -webkit-justify-content: center; justify-content: center; -webkit-box-align: center; -ms-flex-align: center; -webkit-align-items: center; align-items: center; }

.swiper-pagination-bullet { width: 210px; height: 130px; border: 3px solid transparent; border-radius: 5px; opacity: 0.4; background-color: #ccc; -webkit-transition: all 0.3s ease; -ms-transition: all 0.3s ease; -moz-transition: all 0.3s ease; transition: all 0.3s ease; text-align: center; }

.swiper-pagination-bullet-active { opacity: 1; background-color: #ccc; border-color: #00c1df; }

.bullet_title { margin: 12px auto 5px auto; color: #fff; font-size: 18px; }

.bullet_contet { display: block; margin: 0 auto; width: 160px; font-size: 12px; color: #a4a4a4; }
