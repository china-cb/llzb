@charset "utf-8";
@import"core/setting";
@import"core/css3";
@import"core/_mixin";
@mixin transitions ($value: 0.6s){
  transition: all $value;
    -webkit-transition: all $value; /* Safari */
    -moz-transition: all $value;
    -o-transition: all $value;
}
.main{
  width:100%;
  position: relative ;
  background: #f4f5fb;
  &.channel-user{
    >.container{
      padding-left:0;
    }
  }
  >.container{
    width:1200px;
    box-sizing: border-box;
    padding-left:300px;
    margin:auto;
    position: relative;
    @extend %clearfix;
    &.without-menu{
      padding:0 ;
    }
    >.menu{
      position: absolute;
      top:0;
      left:0;
      width:300px;
      text-align: center;
      box-sizing: border-box;
      padding-top:10px;
      >.menu-item{
        width:270px;
        display: block;
        margin:10px auto 0;
        position: relative;
        &.active{
          >.mi-text{
            background: #00c1df;
            color:#fff;
            >i{
              color:#fff;
            }
          }
        }
        >.mi-text{
          width:100%;
          height: 40px;
          display: block;
          border-radius: 40px;
          background: #e4e6f2;
          line-height: 40px;
          cursor: pointer;
          color:#666;
          font-weight: normal;
          letter-spacing: 1px;
          @include transition();
          box-sizing: border-box;
          padding-left:110px;
          text-align: left;
          >i{
            color:#999;
            font-size: 30px;
            position: absolute;
            line-height: 40px;
            left:60px;
            @include transition();
          }
          &:hover{
            background: #00c1df;
            color:#fff;
            >i{
              color:#fff;
            }
          }
        }
        .item-group{
          width:100%;
          box-sizing: border-box;
          padding:0 40px;
          @include transition();
          &.active{
            padding:10px 0 10px 40px;
            >.ig-item{
              height: 30px;
              margin-top:10px;
            }
          }
          >.ig-item{
            line-height: 30px;
            height: 0;
            margin-top:0px;
            cursor: pointer;
            color:#999;
            position: relative;
            box-sizing: border-box;
			display:block;
            padding-left:70px;
            text-align: left;
            @include transition();
            white-space: nowrap;
            overflow: hidden;
            .auth{
              padding:2px 10px;
              border-radius: 20px;
              margin-left:8px;
              color:#fff;
              font-size: 12px;
              &.ing{
                background: #df6400;
              }
            }
            &:hover,&.active{
              color:#00c1df;
            }
            >i{
              position: absolute;
              height: 30px;
              line-height: 30px;
              left:20px;
              font-size: 28px;
              &.font{
                font-size: 16px;
                font-style: normal;
                font-family: $fontHeiTi;
                font-weight: bold;
                text-transform: none;
              }
            }
          }
        }
      }
    }
    >.content{
      width:100%;
      position: relative;
      box-sizing: border-box;
      padding:6px 0 15px 0;
      @extend %clearfix;
      .block-com{
        position: relative;
        box-sizing: border-box;
        background: #fff;
        box-shadow: 0 0 5px #eee;
        margin:18px auto 0;
        min-height: 100px;
        >.title{
          padding:0 15px;
          height: 30px;
          background: #1e1b29;
          text-align: center;
          color:#fff;
          position: absolute;
          line-height: 30px;
          top:10px;
          left:0;
          border-radius: 0 5px 5px 0;
        }
      }
      .block{
        position: relative;
        box-sizing: border-box;
        min-height: 800px;
        padding:18px 0;
        border-radius: 8px;
        background: #fff;
        box-shadow: 0 0 3px rgba(#eee,0.3);
        >.basic_h1{
          width: 845px;
          height: 30px;
          line-height: 30px;
          text-align: left;
          .basic_h1_left{
            display: block;
            float: left;
            width: 100px;
            height: 100%;
            background-color: #1e1b29;
            text-align: center;
            color: #fff;
            font-size: 14px;
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
            &:after{@extend %clearfix};
          }
          >.reg_time{
            margin-left: 22px;
            font-size: 14px;
            color: #999999;
            >span{
              margin-left: 22px;
            }
          }
          >.modify{
            margin-top: 5px;
            cursor: pointer;
            float: right;
            display: block;
            width: 78px;
            color: #fff;
            line-height: 20px;
            text-align: center;
            font-size: 12px;
            height: 20px;
            border-radius: 10px;
            background-color: #df6400;
            @include transitions;
            &:after{@extend %clearfix};
            &:hover{background-color: #bb5400}
          }
        }
        .basic_content{
          margin: 50px auto 0 auto;
          width: 770px;
          height: 265px;
          >.head_img{
            overflow: hidden;
            float: left;
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background-color: #e3e9ea;
            &:after{@extend %clearfix};
          }
          .basic_info{
            float: right;
            width: 588px;
            height: 100%;
            text-align: left;
            &:after{@extend %clearfix};
            li{
               &:after{@extend %clearfix};
               >span{
                  display: block;
                  font-size: 14px;
                  margin-bottom: 30px;
                &:nth-child(1){
                  width: 70px;
                  float: left;
                  text-align: right;
                  color: #002222;
                }
                 &:nth-child(2){
                  width: 500px;
                  float: right;
                  color: #002222;
                }
                .not_bound{color: #df6400;margin-right: 10px;}
                .go_bound{
                    cursor: pointer;
                    display: inline-block;
                    margin-left: 10px;
                    width: 78px;
                    color: #fff;
                    line-height: 20px;
                    text-align: center;
                    font-size: 12px;
                    height: 20px;
                    border-radius: 10px;
                    background-color: #df6400;
                    @include transitions;
                    &:after{@extend %clearfix};
                    &:hover{background-color: #bb5400}
                }
              }
            }
          }
        }
        .security{
          margin: 20px 0 0 0;
          li{
            text-align: left;
            margin: 5px auto 0 auto;
            width: 750px;
            padding: 0 30px;
            height: 95px;
            line-height: 95px;
            border-radius: 5px;
            background-color: #f9fafe;
            >.security_ico{
              position:relative;
              >.iconfont{
                font-size: 36px;
                color: #00c1df;
              }
              >.i_img{
                position: absolute;
                top: 7px;
                left: 23px;
                border-radius: 50%;
                width: 13px;
                height: 13px;
                background-color: #000;
              }
            }
          }
        }
      }
    }
  }
}

.pages{
  width:100%;
  position: relative;
  display: block;
  height: 20px;
  margin:20px auto;
  letter-spacing: -1em;
  >.items{
    display: inline-block;
    color:#999;
    font-size: 12px;
    line-height: 20px;
    letter-spacing: 0;
    padding:0 7px;
    border-radius: 20px;
    margin:0 5px;
    cursor: pointer;
    @include transition();
    &.active{
      background: #00c1df;
      color:#fff;
      &:hover{
        background: #00c1df;
      }
    }
    &.disable{
      cursor: default;
      color:#ccc;
      &:hover{
        background:none;
      }
    }
    &:hover{
      background: #f1f6f7;
    }
    &.text{
      background: #f1f6f7;
      color:#00c1df;
      &:hover{
        background: #00c1df;
        color:#fff;
      }
    }
  }
}