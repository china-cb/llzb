.helplist .list_content:after, .help_docs .title_path:after { display: block; clear: both; content: ""; visibility: hidden; height: 0; }

.help_nav { background-color: #101b2c; }
.help_nav ul { position: relative; margin: 0 auto; width: 1200px; height: 300px; color: #fff; background: url(../img/help/banner.png) no-repeat center 30px; }
.help_nav ul li { position: absolute; left: 90px; }
.help_nav ul li:nth-child(1) { top: 40px; width: 480px; height: 60px; font-size: 53px; background: url(../img/help/help_ico.png) no-repeat 0px 0px; }
.help_nav ul li:nth-child(2) { font-size: 12px; top: 130px; letter-spacing: 1px; width: 640px; text-align: left; }
.help_nav ul li:nth-child(3) { top: 200px; }
.help_nav ul li:nth-child(3) a { margin-right: 20px; float: left; letter-spacing: 1px; display: block; width: 168px; height: 50px; text-align: center; line-height: 50px; color: #fff; font-size: 18px; border: 2px solid #fff; transition: all 0.6s; -webkit-transition: all 0.6s; /* Safari */ -moz-transition: all 0.6s; -o-transition: all 0.6s; }
.help_nav ul li:nth-child(3) a:nth-child(2):hover, .help_nav ul li:nth-child(3) a:nth-child(1):hover { background-color: #00c1df; color: #fff; border: 2px solid #00c1df; }
.help_nav ul li:nth-child(3) a:nth-child(3) { color: #00c1df; border: 2px solid transparent; }
.help_nav ul li:nth-child(3) a:nth-child(3):hover { color: #fff; margin-left: 5px; }

.helplist { position: relative; text-align: left; width: 100%; height: auto; font-size: 14px; color: #56bfdb; margin-top: 57px; border-top: 2px solid #e4e6f1; }
.helplist .list_title { position: absolute; top: -30px; left: 18px; padding: 0px 10px; border-bottom: 2px solid #56bfdb; font-size: 14px; }
.helplist .list_content { position: relative; margin: 0px auto 0 auto; width: 745px; height: 145px; overflow: hidden; transition: all 0.6s; -webkit-transition: all 0.6s; /* Safari */ -moz-transition: all 0.6s; -o-transition: all 0.6s; }
.helplist .list_content .content_list { position: relative; float: left; width: 100px; height: auto; margin-right: 110px; }
.helplist .list_content .content_list:last-child { float: right; margin-right: 15px; }
.helplist .list_content .content_list a { color: #56bfdb; display: block; letter-spacing: 1px; line-height: 31px; transition: all 0.6s; -webkit-transition: all 0.6s; /* Safari */ -moz-transition: all 0.6s; -o-transition: all 0.6s; }
.helplist .list_content .content_list a:active { color: #222; }
.helplist .list_content .content_list a:hover { color: #222; }
.helplist .list_title2 { margin: 40px auto 5px auto; width: 745px; min-height: 10px; position: relative; color: #222222; font-size: 14px; letter-spacing: 1px; font-weight: 700; }
.helplist .list_title3 { cursor: pointer; display: block; width: 780px; margin: 10px auto 0 auto; color: #999999; font-size: 14px; text-align: right; }
.helplist .list_title3 .list_span { padding: 4px 7px; position: relative; left: 8px; border-radius: 2px; transition: all 0.6s; -webkit-transition: all 0.6s; /* Safari */ -moz-transition: all 0.6s; -o-transition: all 0.6s; }
.helplist .list_title3 .list_span:hover { background-color: #e4e6f2; }
.helplist .list_title3 .list_span i { position: relative; margin-left: 8px; font-size: 12px; display: inline-block; transition: all 0.3s; -webkit-transition: all 0.3s; /* Safari */ -moz-transition: all 0.3s; -o-transition: all 0.3s; }
.helplist .list_title3 .list_span:hover i, .helplist .list_title3 .list_span:hover { color: #222; }
.helplist .list_title3 .list_span .i_tiem { transform: rotate(180deg); -webkit-transform: rotate(180deg); -moz-transform: rotate(180deg); -ms-transform: rotate(180deg); }
.helplist .list_title3 .list_span_act { color: #222; background-color: #e4e6f2; }
.helplist .list_content_act { height: auto; }

.help_docs { margin: 0 auto; width: 830px; height: auto; }
.help_docs .title_path { float: left; padding: 2px 10px; background-color: #f4f5f7; font-size: 14px; color: #666666; border-radius: 7px; }
.help_docs .title_path a { color: #666; transition: all 0.3s; -webkit-transition: all 0.3s; /* Safari */ -moz-transition: all 0.3s; -o-transition: all 0.3s; }
.help_docs .title_path a:hover { color: #56bfdb; }
.help_docs .title_path span { color: #56bfdb; }
.help_docs .title_h2 { margin: 10px 0; text-align: left; font-size: 28px; color: #56bfdb; text-indent: 5px; }
.help_docs .docs_main { text-align: left; width: 100%; height: auto; }
