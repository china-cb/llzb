            cate1_1.push(i+"月");
            data1_1.push(obj[i]);
        }
        // 上个月人员完成工单数填入数据
        myChart1.setOption({
            xAxis: {
                data: cate1_1
            },
            series: [
                {
                    data:data1_1
                }
            ]
        });
    });

