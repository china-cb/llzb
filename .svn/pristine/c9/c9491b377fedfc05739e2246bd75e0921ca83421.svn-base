{extend name="base/base"/}
{block name="css"}{/block}
{block name="site_nav_0"}后台{/block}
{block name="site_nav_1"}主题分类管理{/block}
{block name="site_nav_2"}主题类型列表{/block}
{block name='content'}

<div class="cl pd-5 bg-1 bk-gray mt-20">
    <span class="l">
    <a class="btn btn-primary radius open_form" data-url="{:url('exec',['type'=>'add'])}" href="javascript:;">
        <i class="Hui-iconfont">&#xe600;</i> 添加新主题</a>
    <a class="btn btn-primary radius" onclick="location.replace(location)" href="javascript:;">
        <i class="Hui-iconfont">&#xe68f;</i> 刷新</a>
    </span>

    <form id="form_condition" class="form-search" method="get">
        <div class="text-c"> 名称搜索：
            <input type="text" class="input-text" style="width:250px" placeholder="请输入主题名称关键字" id="" name="search_word" value="{:input('param.search_word','')}">
            <button type="submit" class="btn btn-success " name=""><i class="Hui-iconfont">&#xe665;</i> 搜索</button>
        <button type="submit" class="btn btn-default" onclick="$('input[name=\'search_word\']').val('')"  name=""><i class="fa fa-times"></i> 清空搜索</button>
            <span class="r">共有数据：<strong>{$total|default="0"}</strong> 条</span>
        </div>
    </form>
</div>
<div class="mt-20">
    <table class="table table-border table-bordered table-bg table-hover table-sort">
        <thead>
        <tr class="text-c">
            <th>主题ID</th>
            <th>标题名称</th>
            <th>状态</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {empty name='list'}
        <tr>
            <td class="text-c" colspan="9">暂无数据..</td>
        </tr>
        {else /}
            {volist name="list" id="vo"}
            <tr  class="text-c" >
                <td>{$vo.id|default=''}</td>
                <td>{$vo.title|default=''}</td>
                <td>
                    {switch name="vo.status"}
                    {case value="1"}<span class="label label-success radius">可用</span>{/case}
                    {case value="2"}<span class="label label-default radius">不可用</span>{/case}
                    {default /}--
                    {/switch}
                </td>
                <td>
                    {eq name="vo.create_time" value=""}
                    --
                    {else/}
                    {$vo.create_time|date="Y-m-d H:i:s",###}
                    {/eq}
                </td>
                <td class="td-manage">
                    <a style="text-decoration:none" class="ml-5 open_form" href="javascript:" data-url="{:url('category_child_list',['type'=>'info','id'=>$vo['id']])}" title="详情">
                        <i class="Hui-iconfont">&#xe681;</i>
                    </a>
                    <a style="text-decoration:none" class="ml-5 open_form" href="javascript:" data-url="{:url('exec',['type'=>'edit','id'=>$vo['id']])}" title="编辑">
                        <i class="Hui-iconfont">&#xe6df;</i>
                    </a>
                    <a data-url="{:url('del')}" data-id="{$vo.id|default=0}" style="text-decoration:none" class="ml-5 del_by_id" href="javascript:;" title="删除">
                        <i class="Hui-iconfont">&#xe6e2;</i>
                    </a>
                </td>
            </tr>
            {/volist}
        {/empty}
        </tbody>
    </table>
</div>


<nav class="page_admin">
    {$page|default=''}
</nav>
{/block}

