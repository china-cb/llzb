@charset "utf-8";
@import"core/setting";
@import"core/css3";
@import"core/_mixin";
.statistics{

		%clearfixs{
		  display:block;clear:both;content:"";visibility:hidden;height:0
		}
		@mixin transitions ($value: 0.6s){
		     transition: all $value;
		    -webkit-transition: all $value; 
		    -moz-transition: all $value;
		    -o-transition: all $value;
		}

		.basic_h1{
		          width: 845px;
		          height: 30px;
		          line-height: 30px;
		          text-align: left;
		     .basic_h1_left{
			      display: block;
			      float: left;
			      padding: 0 15px;
			      height: 100%;
			      background-color: #1e1b29;
			      text-align: center;
			      color: #fff;
			      font-size: 14px;
			      border-top-right-radius: 5px;
			      border-bottom-right-radius: 5px;
			      &:after{@extend %clearfixs};
		      }
		}
		.view_content{
			margin: 15px auto 10px auto;
			width: 810px;
			height: 95px;
			li{
				float: left;
				margin-bottom: 15px;
				display: block;
				width: 200px;
				height: 30px;
				text-align: center;
				line-height: 30px;
				color: #002222;
				font-size: 12px;
				&:nth-child(2),&:nth-child(5){margin-left: 110px;}
				&:nth-child(3),&:nth-child(6){float: right;}
				&:after{@extend %clearfixs;}
				>span{
					font-weight: 700;
					font-size: 16px;
				}
			}
		}
		.curve{
			margin: 20px auto;
			width: 690px;
			height: 420px;
		}


	.channel-title{
	    height: 70px;
	    line-height: 70px;
	    position: relative;
	    width:1200px;
	    margin: auto;
	    text-align: left;
	    font-size: 18px;
	    letter-spacing: 1px;
	    z-index: 5;
	    &:after{
	      position: absolute;
	      width:100%;
	      height: 1px;
	      display: block;
	      content:"";
	      left:0;
	      bottom:0;
	      z-index: 1;
	      @include gradient-horizontal(#00acf3,#9d5aaa,#00acf3,#9d5aaa);
	    }
	    .channel-change{
	      &.active{
	        .dp-content{
	          .dp-group{
	            border:1px solid #00c1df;
	            >.dp-item{
	              height: 40px;
	              line-height: 40px;
	            }
	          }
	        }
	      }
	      position: absolute;
	      right:0;
	      top:15px;
	      font-size: 14px;
	      z-index: 2;
	      width:240px;
	      height: 42px;
	      line-height: 42px;
	      .dp-content{
	        width:100%;
	        height: 42px;
	        border-radius: 5px;
	        .dp-icon{
	          width:42px;
	          height: 42px;
	          line-height: 42px;
	          background: #00c1df;
	          color:#fff;
	          border-radius: 0 5px 5px 0;
	          &:after{
	            color:#fff;
	          }
	        }
	        .dp-text{
	          background: #fff;
	          border-radius: 5px;
	          padding-left:42px;

	          &:after{
	            width:42px;
	            height: 42px;
	            line-height: 42px;
	            display: block;
	            position: absolute;
	            left:0;
	            top:0;
	            color:#333;
	            @extend %iconfont;
	            content:"\e64f";
	            font-size: 24px;
	            text-align: center;
	          }
	        }
	        .dp-group{
	          box-sizing: border-box;
	          >.dp-item{
	            background: #fff;
	            color:#333;
	            &:hover{
	              background: #00c1df;
	              color:#fff;
	            }
	          }
	        }
	      }
	    }
	  }


  }